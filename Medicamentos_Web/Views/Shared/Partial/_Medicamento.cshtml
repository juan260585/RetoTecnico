<!-- Button trigger modal -->
<button type="button" id="btnmodel" style="display:none" class="btn btn-primary" data-toggle="modal" data-target="#medicamentoModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="medicamentoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Medicamento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-lg-4">
                        <label>Nombre</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <input id="txtNombre" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Concentración</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <input id="txtConcentracion" class="form-control" />                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Forma Farmaceútica</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            @* <input id="txtUsuario" class="form-control" /> *@
                            <select id="Select" class="form-control"></select>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <label>Precio</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <input id="txtPrecio" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Presentación</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <input id="txtPresentacion" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Habilitado</label>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            @* <input id="txtHabilitado" class="form-control" /> *@
                            <input type="checkbox" id="txtHabilitado"/>
                            <label for="txtHabilitado">Habilitado</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
                <a href="#" onclick="Save(); return false;" class="btn btn-primary">Save changes</a>
            </div>
        </div>
    </div>
</div>


